<p id="notice"><%= notice %></p>

<h1>Listing Product Units</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Visible</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_units.each do |product_unit| %>
      <tr>
        <td><%= product_unit.title %></td>
        <td><%= product_unit.description %></td>
        <td><%= product_unit.visible %></td>
        <td><%= product_unit.creator %></td>
        <td><%= link_to 'Show', product_unit %></td>
        <td><%= link_to 'Edit', edit_product_unit_path(product_unit) %></td>
        <td><%= link_to 'Destroy', product_unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

