<p id="notice"><%= notice %></p>

<h1>Listing Customer Groups</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Reduce percent</th>
      <th>Visible</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_groups.each do |customer_group| %>
      <tr>
        <td><%= customer_group.title %></td>
        <td><%= customer_group.description %></td>
        <td><%= customer_group.reduce_percent %></td>
        <td><%= customer_group.visible %></td>
        <td><%= customer_group.creator %></td>
        <td><%= link_to 'Show', customer_group %></td>
        <td><%= link_to 'Edit', edit_customer_group_path(customer_group) %></td>
        <td><%= link_to 'Destroy', customer_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

