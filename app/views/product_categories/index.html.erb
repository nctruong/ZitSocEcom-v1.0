<p id="notice"><%= notice %></p>

<h1>Listing Product Categories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Parent</th>
      <th>Weight</th>
      <th>Visible</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_categories.each do |product_category| %>
      <tr>
        <td><%= product_category.title %></td>
        <td><%= product_category.description %></td>
        <td><%= product_category.parent %></td>
        <td><%= product_category.weight %></td>
        <td><%= product_category.visible %></td>
        <td><%= product_category.creator %></td>
        <td><%= link_to 'Show', product_category %></td>
        <td><%= link_to 'Edit', edit_product_category_path(product_category) %></td>
        <td><%= link_to 'Destroy', product_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

