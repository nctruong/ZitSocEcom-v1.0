<h1>Listing Product Unit Associations</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Product unit</th>
      <th>Isdefault</th>
      <th>Ratio</th>
      <th>Creator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_unit_associations.each do |product_unit_association| %>
      <tr>
        <td><%= product_unit_association.product %></td>
        <td><%= product_unit_association.product_unit %></td>
        <td><%= product_unit_association.isDefault %></td>
        <td><%= product_unit_association.ratio %></td>
        <td><%= product_unit_association.creator %></td>
        <td><%= link_to 'Show', product_unit_association %></td>
        <td><%= link_to 'Edit', edit_product_unit_association_path(product_unit_association) %></td>
        <td><%= link_to 'Destroy', product_unit_association, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

